    <% @ticket_request.errors.messages_for(:destination).each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>

  <%= f.label :departure_date, 'Время вылета' %>
  <%# <% if @ticket_request.departure_date.present? %>
